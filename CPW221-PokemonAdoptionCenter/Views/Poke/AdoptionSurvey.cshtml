            <label for="option1">Yes</label>
        </div>
        <div>
            <input type="radio" id="option2" name="question5" value="Option 2">
            <label for="option2">No</label>
        </div>

        <label for="question6">Have you ever trained a pokémon?:</label>
        <div>
            <input type="radio" id="option1" name="question6" value="Option 1">
            <label for="option1">Yes</label>
        </div>
        <div>
            <input type="radio" id="option2" name="question6" value="Option 2">
            <label for="option2">No</label>
        </div>


