@model CPW221_PokemonAdoptionCenter.Models.Pokemon

<div class="container text-center">
    <h1>Pickamon Survey</h1>
    @{
        string NewName = Model.Name.Replace(' ', '-');
        string ImageOfPokemon = Model.ImageOfPokemon;
    }
    <div>
        <h4>We think @NewName could be a great fit for you!</h4>
        <img src="@ImageOfPokemon" alt="@NewName" style="width:300px; height:300px;" /><!--Image of Pokemon-->
    </div>
    <h4>Wanna learn more about me?</h4>
        <div>
           <a asp-action="AvailableMons">Come see me and my other friends here at the center!</a>
      </div>
</div>
<!--DISPLAYS A RANDOM POKEMON FROM THE DB. CAN ONLY DISPLAY POKEMON THAT HAVE "isAvailable" SET TO TRUE-->
